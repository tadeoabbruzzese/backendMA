<h1 class="display-1 m-4">Formulario de edición de películas</h1>
<hr>

<form action="/api/peliculas/{{pelicula._id}}?_method=PUT" method="POST" class="border border-warning p-5">
{{!-- Campo Titulo Pélicula --}}
    <div class="mb-3">
        <label for="lbl-title" class="form-label">Título</label>
        <input type="text" class="form-control" id="lbl-title" name="title" value="{{pelicula.title}}" placeholder="Ingrese el título de la película">
    </div>

{{!-- Campo Año Película --}}
    <div class="mb-3">
        <label for="lbl-year" class="form-label">Año</label>
        <input type="text" class="form-control" id="lbl-year" name="year" value="{{pelicula.year}}" placeholder="Ingrese el año de la película">
    </div>

    <button class="btn btn-warning">Crear película</button>
</form>
<a href="/api/peliculas" class="btn btn-success my-2">Volver atras</a>